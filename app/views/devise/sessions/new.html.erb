<div class="contents-row">
  <div class="user-form">
    <h2>ログイン</h2>

    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "field-form", placeholder: "　アドレスを入力してください" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "field-form", placeholder: "　パスワードを入力してください" %>
      </div>


      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>