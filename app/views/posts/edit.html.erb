<div class="content-title">
  投稿の編集✏️
</div>
<%= form_with model: @post, class: :form, local: true do |form| %>
  <%= form.text_field :title, placeholder: :タイトルを記入してください, class: :form__title %>
  <ul class="form__review">
  <li class="form__review__left">
    評価：⭐️
  </li>
  <li class="form__review__right">
    <%= form.select :review, [ ["5.0",1], ["4.5", 2], ["4.0", 3 ] ,["3.5", 4], ["3.0", 5], ["2.5", 6], ["2.0", 7], ["1.5", 8], ["1.0", 9], ["0.5", 10]  ], prompt: "評価を選択してください" %>
  </li>
  </ul>
  <%= form.text_area :content, placeholder: :感想を記入してください, class: :form__content %>
  <%= form.text_field :image, placeholder: :画像URLを記入してください, class: :form__image %>
  <%= form.submit '再投稿する', class: :"btn btn-success mt-4" %>
<% end %>