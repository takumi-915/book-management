<div class="menu">
  <div class="menu-bar">
    <div class="menu-bar__left">
      あなたが現在読んだ本は<strong><%= @posts.ids.length %></strong>冊です。
    </div>
    <div class="search">
      <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "キーワードで投稿を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "btn btn-light" %>
      <% end %>
    </div>
  </div>
  <div class="menu-post">
    <% @posts.each do |post| %>
　  <%= render partial: "post", locals: { post: post } %>
    <% end %>
  </div>
</div>